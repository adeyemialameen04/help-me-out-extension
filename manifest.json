{
    "manifest_version": 3,
    "name": "Help Me Out",
    "description": "Record your screen with HelpMeOut Chrome extension.",
    "icons": {
        "16": "/icons/favicon-16x16.png",
        "32": "/icons/favicon-32x32.png",
        "192": "/icons/android-chrome-192x192.png"
      },
      "background":{
        "service_worker": "background.js"
      },
      "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/icons/favicon-16x16.png",
            "32": "/icons/favicon-32x32.png",
            "192": "/icons/android-chrome-192x192.png"  
        }
      },
      "host_permissions":[
        "http://*/*",
        "https://*/*"
      ],
      "version": "3.0",
      "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "desktopCapture"
      ]
}